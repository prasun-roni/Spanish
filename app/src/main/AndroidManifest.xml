<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.example.spanish">

    <application
        android:allowBackup="true"
        android:icon="@drawable/spanish"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Spanish">
        <activity android:name=".PhrasesActivity"
            android:label="@string/phrases"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ColorActivity"
            android:label="@string/colors"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".FamilyActivity"
            android:label="@string/family"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".NumberActivity"
            android:label="@string/number"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>